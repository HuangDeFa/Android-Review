<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kenzz.gank.activity.GankActivity">
    <LinearLayout
        android:id="@+id/home_head_container"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/title_bar"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/home_head_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:src="@mipmap/back"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/home_head_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                tools:text="每日干货"
                />
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/gank_page_rv"
        android:layout_below="@id/home_head_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
