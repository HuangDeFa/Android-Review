<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kenzz.gank.activity.MeiZiActivity"
    android:id="@+id/meizi_page_container"
    >
<ImageView
    android:id="@+id/meizi_page_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:transitionName="girlImage"
    />
    <RelativeLayout
        android:id="@+id/meizi_page_titleBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/meizi_page_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/share"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:id="@+id/meizi_page_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/delete"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/meizi_page_save"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/save"
            android:layout_toLeftOf="@id/meizi_page_share"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
</FrameLayout>
