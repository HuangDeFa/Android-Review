<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="Banner">
        <attr name="AutoPlay" format="boolean"/>
        <attr name="IndicatorStyle" format="enum">
            <enum name="DotStyle" value="2"/>
            <enum name="TextStyle" value="1"/>
        </attr>
        <attr name="DotSelectedColor" format="color"/>
        <attr name="DotNormalColor" format="color"/>
        <attr name="DotIndicatorDistance" format="dimension"/>
    </declare-styleable>
    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--设置弹出菜单文字颜色-->
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">50dp</item>
        <!--5.0以上有效-->
        <!--<item name="android:actionOverflowMenuStyle">@style/ToolBarActionMenuStyle</item>-->
    </style>
    <style name="ToolBarActionMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!--是否覆盖在锚点-->
        <item name="android:overlapAnchor">false</item>
        <!--水平偏移-->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!--垂直偏移-->
        <item name="android:dropDownVerticalOffset">50dp</item>
    </style>
    <style name="PopWindowAnimStyle">
        <item name="android:popupBackground">#96463f3f</item>
        <item name="android:windowEnterAnimation">@anim/pop_in_right</item>
        <item name="android:windowExitAnimation">@anim/pop_out_right</item>
    </style>
</resources>
