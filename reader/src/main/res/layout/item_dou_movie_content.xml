<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="130dp"
    android:paddingTop="5dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    >
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_item_dou_movie"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/img_default_movie"
        android:transitionName="share_view"
        />
    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_dou_movie"
        android:layout_marginLeft="8dp"
        >
       <TextView
           android:id="@+id/tv_item_dou_movie_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@android:color/black"
           android:textStyle="bold"
           android:textSize="14sp"
           tools:text="正义联盟"
           />
        <TextView
            android:id="@+id/tv_item_dou_movie_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="13sp"
            tools:text="导演：王尼玛"
            />
        <TextView
            android:id="@+id/tv_item_dou_movie_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="13sp"
            tools:text="主演：唐马儒，木子，匹诺曹，张全蛋，赵铁柱，大队长"
            />
        <TextView
            android:id="@+id/tv_item_dou_movie_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="13sp"
            tools:text="类型：脑残系列/每日一笑"
            />
        <TextView
            android:id="@+id/tv_item_dou_movie_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="13sp"
            tools:text="评分：9.2"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/iv_item_dou_movie"
        android:layout_marginLeft="8dp"
        android:background="@android:color/darker_gray"
        />
</RelativeLayout>