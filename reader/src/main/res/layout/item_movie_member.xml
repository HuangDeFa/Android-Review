<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    >
<ImageView
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/iv_item_movie_member"
    android:layout_width="100dp"
    android:layout_height="100dp"
    tools:src="@drawable/blue_bg"
    />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_item_movie_member"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/tv_item_movie_member_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_item_movie_member"
            android:layout_centerVertical="true"
            android:text="演员"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_item_movie_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_movie_member_type"
            tools:text="王尼玛"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@android:color/darker_gray"
        android:layout_toRightOf="@id/iv_item_movie_member"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        />
</RelativeLayout>