<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kenzz.reviewapp.activity.RxJavaActivity">
<EditText
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:hint="用户名"
    android:id="@+id/rxjava_userName_edit_text"
    />

    <EditText
        android:id="@+id/rxjava_email_edit_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rxjava_userName_edit_text"
        android:inputType="textEmailAddress"
        android:hint="Email"/>

    <EditText
        android:id="@+id/rxjava_password_edit_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rxjava_email_edit_text"
        android:hint="密码"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/rxjava_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@id/rxjava_password_edit_text"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>
